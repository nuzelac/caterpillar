@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.KWLentry.Entry)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.User.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Response1)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Correction)
        </td>
