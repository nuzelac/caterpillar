@model IEnumerable<Caterpillar.Models.KWLentry>

@{
    ViewBag.Title = "Index";
}

<script type="text/javascript">
    var questions = [@Html.Raw(String.Join(",", Model.Select(s => "'" + s.Entry + "'")))];
</script>

<div id="caterpillar">
</div>

// GUMB KOJI OTVARA MODAL - SAMO ZA TEST
<button class="btn btn-primary btn-lg" data-toggle="modal" data-target="#kwl"> ovdje </button>


//MODAL ZA PITANJE
<div class="modal fade" id="kwl" role="dialog">
        <div class="modal-dialog">
            <div class="modal-content">
                <form class="form-horizontal">
                    <div class="modal-header">
                        <h4>Pitanje</h4>
                    </div>
                    <div class="modal-body">
                        <div class="form-group">
                            <label for="contact-name" class="col-lg-2 control-label">Name:</label>
                            <div class="col-lg-10">
                                <input type="text" class="form-control" id="contact-name" placeholder="Full name">
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="contact-email" class="col-lg-2 control-label">E-mail:</label>
                            <div class="col-lg-10">
                                <input type="email" class="form-control" id="contact-name2" placeholder="you@example.com">
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="contact-message" class="col-lg-2 control-label">Name:</label>
                            <div class="col-lg-10">
                                <textarea class="form-control" rows="8"></textarea>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button class="btn btn-default" type="submit">Submit</button>
                        <a class="btn btn-primary" data-dismiss="modal">Close</a>
                    </div>
                </form>
            </div>
        </div>
    </div>