@model Caterpillar.Models.Topic

@{
    ViewBag.Title = "AddExistingTopic";
    int idCourse = (int)ViewData["Course"];
    int idClass = (int)ViewData["Class"];
    Layout = "~/Views/Shared/_LayoutMainMenuTeacher.cshtml";
}

<h2>AddExistingTopic</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Topic</h4>
        <hr />
        @Html.ValidationSummary(true)

        <div class="form-group">
            @Html.LabelFor(model => model.Id, "Topic", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("Id", String.Empty)
                @Html.ValidationMessageFor(model => model.Id)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "ViewTopics", new { idClass = idClass, idCourse = idCourse } )
</div>
