@model Caterpillar.Models.KWLentry

@{
    ViewBag.Title = "EditEntry";
    Layout = "~/Views/Shared/_LayoutMainMenuTeacher.cshtml";
    int idClass = (int)ViewData["PrimljeniClassId"];
    int idCourse = (int)ViewData["PrimljeniCourseId"];
    int idTopic = (int)ViewData["PrimljeniTopicId"];
}

<h2>Edit entry</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.Id)
        @Html.HiddenFor(model => model.UserId)
        @Html.HiddenFor(model => model.Type)
        @Html.HiddenFor(model => model.TopicId)

        <div class="form-group">
            @Html.LabelFor(model => model.Entry, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Entry)
                @Html.ValidationMessageFor(model => model.Entry)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "ViewEntries", new { idClass = (int)idClass, idCourse = (int)idCourse, idTopic = (int)idTopic })
</div>
