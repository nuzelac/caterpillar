@model IEnumerable<Caterpillar.Controllers.MainMenuTeacherController.TOPICSClassCourseViewModel>

@{
    ViewBag.Title = "Topics";
    Layout = "~/Views/Shared/_LayoutMainMenuTeacher.cshtml";
}

<h2>Topics in course @ViewBag.CourseName for class @ViewBag.ClassName</h2>

<br />

<table class="table">
    <tr>

        <th>
            Topic
        </th>

        <th></th>
    </tr>

    @foreach (var item in ViewData["Topics"] as List<Caterpillar.Controllers.MainMenuTeacherController.TOPICSClassCourseViewModel>)
    {
        <tr>

            <td>
                @Html.DisplayFor(modelItem => item.Topic.Name)
            </td>
            <td>
                @Html.ActionLink("View Student Entries", "ViewEntries", new { idClass = ViewData["PrimljeniClassId"], idCourse = ViewData["PrimljeniCourseId"], idTopic = item.Topic.Id }) |
                @Html.ActionLink("View Student Responses", "ViewResponses", new { idClass = ViewData["PrimljeniClassId"], idCourse = ViewData["PrimljeniCourseId"], idTopic = item.Topic.Id }) |
                @Html.ActionLink("Edit", "EditTopic", new { id = item.Topic.Id, idClass = ViewData["PrimljeniClassId"], idCourse = ViewData["PrimljeniCourseId"] }) |
                @Html.ActionLink("Delete", "DeleteTopic", new { id = item.Topic.Id, idClass = ViewData["PrimljeniClassId"], idCourse = ViewData["PrimljeniCourseId"] })
            </td>
        </tr>
    }

</table>
<p>


    @Html.ActionLink("Create New Topic", "CreateNewTopic", new { idClass = ViewData["PrimljeniClassId"], idCourse = ViewData["PrimljeniCourseId"] }) |
    @Html.ActionLink("Add Existing Topic", "AddExistingTopic", new { idClass = ViewData["PrimljeniClassId"], idCourse = ViewData["PrimljeniCourseId"] }) |
    @Html.ActionLink("Back to List", "Index")
</p>