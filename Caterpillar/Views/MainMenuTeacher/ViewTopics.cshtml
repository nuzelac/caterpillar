@model IEnumerable<Caterpillar.Models.TOPICSClassCourseViewModel>

@{
    ViewBag.Title = "view students";
    Layout = "~/Views/Shared/_LayoutMainMenuTeacher.cshtml";
}

<h2>Details</h2>


<table class="table">
    <tr>
       
        <th>
            TopicName
        </th>

        <th></th>
    </tr>

    @foreach (var item in ViewData["Topics"] as List<Caterpillar.Models.TOPICSClassCourseViewModel>)
    {
        <tr>

            <td>
                @Html.DisplayFor(modelItem => item.Topic.Name)
            </td>
            <td>
                @Html.ActionLink("ViewStudentsEnteries", "ViewStudentsEnteries", new { idClass = ViewData["PrimljeniClassId"], idCourse = ViewData["PrimljeniClassId"], idTopic= item.Topic.Id }) |                
                @Html.ActionLink("Edit", "Edit", new { id = item.Topic.Id }) |                
                @Html.ActionLink("Delete", "Delete", new { id = item.Topic.Id })
            </td>
        </tr>
    }

</table>
<p>
    
     
    @Html.ActionLink("CreateNewTopic", "CreateNewTopic", new { idClass = ViewData["PrimljeniClassId"], idCourse = ViewData["PrimljeniClassId"] }) |     
    @Html.ActionLink("Back to List", "Index")
</p>