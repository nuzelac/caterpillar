@model Caterpillar.Models.Response

@{
    ViewBag.Title = "Add response to entry";
    Layout = "~/Views/Shared/_LayoutMainMenuTeacher.cshtml";
    int idClass = (int)ViewData["PrimljeniClassId"];
    int idCourse = (int)ViewData["PrimljeniCourseId"];
    int idTopic = (int)ViewData["PrimljeniTopicId"];
}

<h2>Add response on entry:</h2>



@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.Id)
        @Html.HiddenFor(model => model.EntryId)
        @Html.HiddenFor(model => model.UserId)

        <div class="form-group">
            <div class="control-label col-md-2">Entry</div>
            <div class="col-md-10">
                <h4>@ViewBag.Entry</h4>
            </div>
        </div>

        <div class="form-group">
            <div class="control-label col-md-2">Response</div>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Response1)
                @Html.ValidationMessageFor(model => model.Response1)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "ViewEntries", new { idClass = (int)idClass, idCourse = (int)idCourse, idTopic = (int)idTopic })
</div>
