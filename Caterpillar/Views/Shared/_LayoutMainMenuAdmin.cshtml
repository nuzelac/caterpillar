		<div class="container">
			<a href="@Url.Action("Index", "MainMenuAdmin")" class="navbar-brand" style="width: 300px;"> <img class="background-image" src="@Url.Content("~/Content/img/caterpillar-pia-nacrtano-dobrasiva.jpg")" width="100%">  </a>

